                                  IsEnabled="False"
                                  Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                      <iconPacks:PackIconModern Width="20"
                                                Height="20"
                                                Kind="City" />
                    </ToggleButton>-->

    </StackPanel>

    <StackPanel Grid.Row="0" Grid.Column="3">
      <TextBlock Text="Flat button" Classes="DescriptionHeaderStyle" />
      <Controls:MetroButton Width="100"
              Margin="{StaticResource ControlMargin}"
              Content="Enabled" Classes="MetroFlatButton" />
      <Controls:MetroButton Width="100"
              Margin="{StaticResource ControlMargin}"
              Content="Disabled"
              IsEnabled="False" Classes="MetroFlatButton" />
    </StackPanel>

    <StackPanel Grid.Row="0" Grid.Column="4">
      <TextBlock Text="Circle button" Classes="DescriptionHeaderStyle" />
      <Controls:MetroButton Width="48"
            Height="48"
            Margin="4"
            Classes="MetroCircleButtonStyle">
        <!--<iconPacks:PackIconModern Width="20"
                                              Height="20"
                                              Kind="City" />-->
        iconPacks missing
      </Controls:MetroButton>
      <Controls:MetroButton Width="48"
              Height="48"
              Margin="4"
              IsEnabled="False"
              Classes="MetroCircleButtonStyle">
        <!--<iconPacks:PackIconModern Width="20"
                                              Height="20"
                                              Kind="CitySeattle" />-->
        iconPacks missing
      </Controls:MetroButton>
      <Controls:MetroButton Width="48"
              Height="48"
              Margin="4"
              Foreground="{DynamicResource MahApps.Brushes.Accent}"
              IsEnabled="False"
              Classes="MetroCircleButtonStyle">
