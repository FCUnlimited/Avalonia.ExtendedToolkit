  <Style Selector="Controls|MetroListBoxItem">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.White}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Highlight}" />
    <Setter Property="Margin" Value="0" />
    <Setter Property="MinHeight" Value="25" />
    <Setter Property="Padding" Value="5 0 0 0" />

    <Setter Property="ActiveSelectionBackgroundBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
    <Setter Property="ActiveSelectionForegroundBrush" Value="{DynamicResource MahApps.Brushes.AccentSelectedColor}" />
    <Setter Property="DisabledForegroundBrush" Value="{DynamicResource MahApps.Brushes.GrayNormal}" />
    <Setter Property="DisabledSelectedBackgroundBrush" Value="{DynamicResource MahApps.Brushes.Gray7}" />
    <Setter Property="DisabledSelectedForegroundBrush" Value="{DynamicResource MahApps.Brushes.AccentSelectedColor}" />
    <Setter Property="HoverBackgroundBrush" Value="{DynamicResource MahApps.Brushes.Accent3}" />
    <Setter Property="HoverSelectedBackgroundBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
    <Setter Property="SelectedBackgroundBrush" Value="{DynamicResource MahApps.Brushes.Accent2}" />
    <Setter Property="SelectedForegroundBrush" Value="{DynamicResource MahApps.Brushes.AccentSelectedColor}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid Background="{TemplateBinding Background}" >
            <Border x:Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                     />
            <Grid Margin="{TemplateBinding BorderThickness}">
              <ContentPresenter Name="PART_ContentPresenter" Margin="{TemplateBinding Padding}"
                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          Content="{TemplateBinding Content}"
                          Padding="{TemplateBinding Padding}"
                          />
            </Grid>
          </Grid>

        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>

  <Style Selector="Controls|MetroListBoxItem[IsSelected=true]">
    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.AccentSelectedColor}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem:selected /template/ Border#Border">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.AccentSelectedColor}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem:selected:pointerover /template/ Border#Border">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
  </Style>

  
  
  
  
  <Style Selector="Controls|MetroListBoxItem[IsSelected=false][IsPointerOver=true] /template/ Border#Border">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent3}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem[IsEnabled=false]">
    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.GrayNormal}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem:disabled  /template/ Border#Border">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray1}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem[IsEnabled=false][IsSelected=true]">
    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.AccentSelectedColor}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem[IsEnabled=false][IsSelected=true]  /template/ Border#Border">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray7}" />
  </Style>

  
  
  
  <!--special avalonia-->
  <Style Selector="Controls|MetroListBoxItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent2}"/>
  </Style>

  <Style Selector="Controls|MetroListBoxItem:selected:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
  </Style>

  <Style Selector="Controls|MetroListBoxItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent3}"/>
  </Style>
  
  
  
  
