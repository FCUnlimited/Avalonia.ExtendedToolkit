                                                  Kind="CitySeattle" />
                      </DataTemplate>
                    </Controls:MetroButton.ContentTemplate>-->
        iconPacks missing
      </Controls:MetroButton>

    </StackPanel>

    <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center">
