                         Classes="StaticResource ProgressRingEllipseStyle" />
              </Canvas>
              <Canvas x:Name="SixthCircle"
                      RenderTransformOrigin=".5,.5"
                      IsVisible="False">
                <!--<Canvas.RenderTransform>
                  --><!--x:Name="E6R"--><!--
                  <RotateTransform  />
